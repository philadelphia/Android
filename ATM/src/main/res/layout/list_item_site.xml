<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/list_item_margin_left"
    android:paddingRight="@dimen/list_item_margin_right" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/description_fav_button"
        android:focusable="false"
        android:gravity="left"
        android:paddingEnd="15dp"
        android:paddingLeft="0dp"
        android:paddingRight="15dp"
        android:paddingStart="0dp"
        android:src="@mipmap/ic_star_gray" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="13sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_icon_margin_left"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/serverity"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/alarmnum"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="1"
            android:background="@drawable/btn_shape"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </FrameLayout>

</LinearLayout>