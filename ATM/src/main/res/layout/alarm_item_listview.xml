<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:paddingLeft="56dp"
    android:paddingRight="20dp"
    android:orientation="horizontal"
    
   >

    <ImageView
        android:id="@+id/iv_chest_open"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8.67dp"
        android:layout_marginTop="7.67dp"
        android:src="@mipmap/alarm_icon" />

    <TextView
        android:id="@+id/tv_chest_open"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/iv_chest_open"
        android:layout_marginLeft="10dp"
        android:textColor="#1d1c1c"
        android:textSize="12sp"/>
     
    
</RelativeLayout>