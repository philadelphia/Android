<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/radioScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/unScrollable"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="unScrollable"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/scrollable"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="scrollable"
            android:textSize="20sp" />


    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/adjustNothing"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="adjustNothing"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/adjustUnspecified"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="adjustUnspecified"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/adjustResize"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity=""
            android:text="adjustResize"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/adjustPan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="adjustPan"
            android:textSize="10sp" />
    </RadioGroup>

